@model IEnumerable<AzSmartLibrary.Application.DTOs.BookDto>

@{
    ViewData["Title"] = "Colección de Libros";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show rounded-pill shadow-sm mb-4 border-0" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 fade-in gap-3">
    <div>
        <h1 class="display-6 fw-bold text-dark mb-1">Biblioteca</h1>
        <p class="text-muted mb-0">Gestión inteligente de catálogo</p>
    </div>

    <div class="d-flex flex-column flex-md-row gap-3 align-items-md-center">
        <div class="input-group shadow-sm rounded-pill overflow-hidden bg-white" style="width: 300px; max-width: 100%;">
            <span class="input-group-text border-0 bg-transparent ps-3 text-muted">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" id="searchInput" class="form-control border-0 ps-2 py-2 shadow-none" placeholder="Buscar libro o autor...">
        </div>

        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm rounded-pill px-4 d-flex align-items-center justify-content-center gap-2 btn-floating-action">
            <i class="bi bi-plus-lg"></i>
            <span class="d-none d-md-inline">Nuevo Libro</span>
        </a>
    </div>
</div>

<div class="glass-panel mb-4 position-relative">

    <div class="table-responsive d-none d-md-block">
        <table class="table table-modern align-middle" id="booksTable">
            <thead>
                <tr>
                    <th class="ps-4">Título de la Obra</th>
                    <th>Autor Principal</th>
                    <th class="text-end pe-4">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-row-hover search-item">
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-light rounded p-2 me-3 text-primary">
                                    <i class="bi bi-book fs-4"></i>
                                </div>
                                <span class="fw-bold text-dark search-title">@item.Title</span>
                            </div>
                        </td>
                        <td>
                            <span class="author-badge">
                                <img src="https://ui-avatars.com/api/?name=@item.AuthorName&background=dbeafe&color=2563eb&size=24" class="rounded-circle" alt="" />
                                <span class="search-author">@item.AuthorName</span>
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <button type="button"
                                    class="btn btn-outline-danger btn-sm rounded-pill px-3 opacity-75 hover-opacity-100 transition-all js-delete-btn"
                                    data-id="@item.Id"
                                    data-title="@item.Title">
                                <i class="bi bi-trash3 me-1"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-md-none p-3 mobile-list" id="mobileList">
        @foreach (var item in Model)
        {
            <div class="book-card p-3 mb-3 shadow-sm d-flex justify-content-between align-items-center search-item">
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3">
                        <i class="bi bi-book-fill"></i>
                    </div>
                    <div>
                        <h6 class="mb-1 fw-bold text-dark search-title">@item.Title</h6>
                        <small class="text-muted search-author">@item.AuthorName</small>
                    </div>
                </div>
                <button class="btn btn-icon btn-light text-danger rounded-circle shadow-sm js-delete-btn"
                        data-id="@item.Id"
                        data-title="@item.Title">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        }
    </div>

    <div id="noResults" class="text-center py-5 d-none">
        <div class="mb-3 text-muted opacity-25">
            <i class="bi bi-search display-1"></i>
        </div>
        <h4 class="fw-light text-muted">No encontramos coincidencias</h4>
        <p class="text-muted small">Intenta buscar con otro término.</p>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5" id="emptyState">
            <div class="mb-3 text-muted opacity-25">
                <i class="bi bi-journal-bookmark display-1"></i>
            </div>
            <h4 class="fw-light text-muted">La biblioteca está vacía</h4>
            <p class="text-muted small">Comienza agregando autores y libros.</p>
        </div>
    }
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-body text-center p-5">
                <div class="text-danger mb-3">
                    <i class="bi bi-exclamation-circle display-1"></i>
                </div>
                <h3 class="fw-bold mb-2">¿Estás seguro?</h3>
                <p class="text-muted mb-4">
                    Vas a eliminar el libro <strong id="modalBookTitle" class="text-dark"></strong>.
                    <br>Esta acción no se puede deshacer.
                </p>

                <div class="d-flex justify-content-center gap-2">
                    <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancelar</button>
                    <form id="deleteForm" asp-action="Delete" method="post">
                        <input type="hidden" name="id" id="deleteBookId" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow-sm">
                            Sí, eliminarlo
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('searchInput');
            const noResultsMsg = document.getElementById('noResults');
            const emptyState = document.getElementById('emptyState');

            const items = document.querySelectorAll('.search-item');

            searchInput.addEventListener('input', function(e) {
                const term = e.target.value.toLowerCase().trim();
                let hasVisibleItems = false;

                items.forEach(item => {
                    const title = item.querySelector('.search-title').textContent.toLowerCase();
                    const author = item.querySelector('.search-author').textContent.toLowerCase();

                    if (title.includes(term) || author.includes(term)) {
                        item.classList.remove('d-none'); // Mostrar (Bootstrap class)
                        if(item.tagName === 'TR') item.style.display = ''; // Restaurar display tabla
                        hasVisibleItems = true;
                    } else {
                        item.classList.add('d-none'); // Ocultar
                    }
                });
                if (!hasVisibleItems && items.length > 0) {
                    noResultsMsg.classList.remove('d-none');
                } else {
                    noResultsMsg.classList.add('d-none');
                }
            });

            const deleteModalEl = document.getElementById('deleteModal');
            if (deleteModalEl) {
                const deleteModal = new bootstrap.Modal(deleteModalEl);
                const titleSpan = document.getElementById('modalBookTitle');
                const idInput = document.getElementById('deleteBookId');

                document.querySelectorAll('.js-delete-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const id = this.getAttribute('data-id');
                        const title = this.getAttribute('data-title');
                        idInput.value = id;
                        titleSpan.textContent = `"${title}"`;
                        deleteModal.show();
                    });
                });
            }
        });
    </script>
}