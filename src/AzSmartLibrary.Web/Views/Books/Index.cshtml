@model IEnumerable<AzSmartLibrary.Application.DTOs.BookDto>

@{
    ViewData["Title"] = "Libros";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Biblioteca de Libros</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-book"></i> Nuevo Libro
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Título</th>
                    <th>Autor</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.Title</td>
                        <td>
                            <span class="badge bg-secondary text-light">
                                <i class="bi bi-person"></i> @item.AuthorName
                            </span>
                        </td>
                        <td class="text-end">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                  onsubmit="return confirm('¿Eliminar este libro?');"
                                  style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center mt-3">
                No hay libros registrados aún. ¡Asegúrate de crear Autores primero!
            </div>
        }
    </div>
</div>