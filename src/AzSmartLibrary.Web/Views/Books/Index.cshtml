@model IEnumerable<AzSmartLibrary.Application.DTOs.BookDto>

@{
    ViewData["Title"] = "Colección de Libros";
}

@* 1. FEEDBACK VISUAL: Sin esto, el usuario no sabe si el borrado funcionó *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show rounded-pill shadow-sm mb-4 border-0" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-5 fade-in">
    <div>
        <h1 class="display-6 fw-bold text-dark mb-1">Biblioteca</h1>
        <p class="text-muted mb-0">Gestión inteligente de catálogo</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm rounded-pill px-4 d-flex align-items-center gap-2 btn-floating-action">
        <i class="bi bi-plus-lg"></i>
        <span class="d-none d-md-inline">Nuevo Libro</span>
    </a>
</div>

<div class="glass-panel mb-4">

    <div class="table-responsive d-none d-md-block">
        <table class="table table-modern align-middle">
            <thead>
                <tr>
                    <th class="ps-4">Título de la Obra</th>
                    <th>Autor Principal</th>
                    <th class="text-end pe-4">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-row-hover">
                        <td class="ps-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-light rounded p-2 me-3 text-primary">
                                    <i class="bi bi-book fs-4"></i>
                                </div>
                                <span class="fw-bold text-dark">@item.Title</span>
                            </div>
                        </td>
                        <td>
                            <span class="author-badge">
                                <img src="https://ui-avatars.com/api/?name=@item.AuthorName&background=dbeafe&color=2563eb&size=24" class="rounded-circle" alt="" />
                                @item.AuthorName
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            @* 2. SEGURIDAD: data-attributes para pasar datos complejos *@
                            <button type="button"
                                    class="btn btn-outline-danger btn-sm rounded-pill px-3 opacity-75 hover-opacity-100 transition-all js-delete-btn"
                                    data-id="@item.Id"
                                    data-title="@item.Title">
                                <i class="bi bi-trash3 me-1"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Lista Móvil *@
    <div class="d-md-none p-3 mobile-list">
        @foreach (var item in Model)
        {
            <div class="book-card p-3 mb-3 shadow-sm d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3">
                        <i class="bi bi-book-fill"></i>
                    </div>
                    <div>
                        <h6 class="mb-1 fw-bold text-dark">@item.Title</h6>
                        <small class="text-muted">@item.AuthorName</small>
                    </div>
                </div>
                <button class="btn btn-icon btn-light text-danger rounded-circle shadow-sm js-delete-btn"
                        data-id="@item.Id"
                        data-title="@item.Title">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3 text-muted opacity-25">
                <i class="bi bi-journal-bookmark display-1"></i>
            </div>
            <h4 class="fw-light text-muted">La biblioteca está vacía</h4>
            <p class="text-muted small">Comienza agregando autores y libros.</p>
        </div>
    }
</div>

@* Modal de Confirmación *@
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-body text-center p-5">
                <div class="text-danger mb-3">
                    <i class="bi bi-exclamation-circle display-1"></i>
                </div>
                <h3 class="fw-bold mb-2">¿Estás seguro?</h3>
                <p class="text-muted mb-4">
                    Vas a eliminar el libro <strong id="modalBookTitle" class="text-dark"></strong>.
                    <br>Esta acción no se puede deshacer.
                </p>

                <div class="d-flex justify-content-center gap-2">
                    <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancelar</button>
                    <form id="deleteForm" asp-action="Delete" method="post">
                        <input type="hidden" name="id" id="deleteBookId" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow-sm">
                            Sí, eliminarlo
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // --- LÓGICA SEGURA Y LIMPIA ---
        document.addEventListener('DOMContentLoaded', () => {
            const deleteModalEl = document.getElementById('deleteModal');
            // Evitar error si el modal no existe (defensive programming)
            if (!deleteModalEl) return;

            const deleteModal = new bootstrap.Modal(deleteModalEl);
            const titleSpan = document.getElementById('modalBookTitle');
            const idInput = document.getElementById('deleteBookId');

            // Event Delegation: Un solo listener para todos los botones (Mejor rendimiento)
            document.querySelectorAll('.js-delete-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    // Extraemos los datos seguros desde los atributos data-*
                    const id = this.getAttribute('data-id');
                    const title = this.getAttribute('data-title');

                    idInput.value = id;
                    titleSpan.textContent = `"${title}"`;

                    deleteModal.show();
                });
            });
        });
    </script>
}