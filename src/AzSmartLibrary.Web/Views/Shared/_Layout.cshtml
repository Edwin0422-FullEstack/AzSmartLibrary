<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AzSmart Library</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/AzSmartLibrary.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Books" asp-action="Index">
                    <i class="bi bi-book-half brand-icon"></i>
                    <span>AzSmart<span class="text-primary">Library</span></span>
                </a>

                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                        aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Books" asp-action="Index">
                                <i class="bi bi-journal-bookmark-fill"></i> Libros
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Authors" asp-action="Index">
                                <i class="bi bi-people-fill"></i> Autores
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4 flex-shrink-0">
        <main role="main" class="fade-in">
            @RenderBody()
        </main>
    </div>

    <footer class="footer py-3 text-center text-muted">
        <div class="container">
            <small>&copy; 2026 - <strong>AzSmart Library</strong> - Arquitectura Limpia .NET 10</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const currentPath = window.location.pathname.toLowerCase();
            document.querySelectorAll('.nav-link').forEach(link => {
                const linkPath = link.getAttribute('href')?.toLowerCase();
                // Lógica mejorada para marcar activo incluso en sub-rutas (ej: /Books/Create)
                if (linkPath && (currentPath === linkPath || (linkPath !== '/' && currentPath.startsWith(linkPath)))) {
                    link.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>