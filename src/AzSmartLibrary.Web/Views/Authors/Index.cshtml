@model IEnumerable<AzSmartLibrary.Application.DTOs.AuthorDto>

@{
    ViewData["Title"] = "Autores Registrados";
}

@* 1. FEEDBACK: Mostramos las alertas del Controller *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show rounded-pill shadow-sm mb-4 border-0" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show rounded-pill shadow-sm mb-4 border-0" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-5 fade-in">
    <div>
        <h1 class="display-6 fw-bold text-dark mb-1">Autores</h1>
        <p class="text-muted mb-0">Directorio de autores de la biblioteca</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm px-4 d-flex align-items-center gap-2 transition-transform">
        <i class="bi bi-person-plus-fill"></i>
        <span class="d-none d-md-inline">Nuevo Autor</span>
    </a>
</div>

<div class="glass-panel mb-4">
    <div class="table-responsive d-none d-md-block">
        <table class="table table-modern align-middle">
            <thead>
                <tr>
                    <th class="ps-4">Perfil del Autor</th>
                    <th class="text-end pe-4">Gestión</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-row-hover">
                        <td class="ps-4">
                            <div class="d-flex align-items-center gap-3">
                                <div class="avatar-ring">
                                    <img src="https://ui-avatars.com/api/?name=@item.Name&background=random&color=fff&size=128&bold=true"
                                         alt="@item.Name" class="avatar-img shadow-sm" />
                                </div>
                                <div>
                                    <h6 class="mb-0 fw-bold text-dark fs-5">@item.Name</h6>
                                </div>
                            </div>
                        </td>
                        <td class="text-end pe-4">
                            @* 2. SEGURIDAD: Usamos data-attributes en lugar de pasar strings en onclick *@
                            <button class="btn btn-outline-danger btn-sm rounded-pill px-3 d-inline-flex align-items-center gap-2 transition-all js-delete-btn"
                                    data-id="@item.Id"
                                    data-name="@item.Name">
                                <i class="bi bi-person-x"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Versión Móvil *@
    <div class="d-md-none p-3 mobile-grid">
        @foreach (var item in Model)
        {
            <div class="author-card p-3 mb-3 d-flex align-items-center justify-content-between shadow-sm">
                <div class="d-flex align-items-center gap-3">
                    <img src="https://ui-avatars.com/api/?name=@item.Name&background=random&color=fff&size=64&bold=true"
                         class="rounded-circle shadow-sm" width="50" height="50" alt="" />
                    <div>
                        <h6 class="mb-0 fw-bold">@item.Name</h6>
                    </div>
                </div>
                <button class="btn btn-icon btn-light text-danger rounded-circle js-delete-btn"
                        data-id="@item.Id"
                        data-name="@item.Name">
                    <i class="bi bi-trash3"></i>
                </button>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-3 opacity-25 text-primary">
                <i class="bi bi-people display-1"></i>
            </div>
            <h4 class="fw-light text-muted">No hay autores registrados</h4>
            <p class="text-muted small">Sé el primero en agregar talento literario.</p>
        </div>
    }
</div>

@* Modal de Confirmación *@
<div class="modal fade" id="deleteAuthorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
            <div class="modal-body text-center p-5">
                <div class="mb-4">
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex p-3">
                        <i class="bi bi-person-exclamation display-4"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-2">¿Desactivar Autor?</h3>
                <p class="text-muted mb-4">
                    Vas a eliminar a <strong id="modalAuthorName" class="text-dark"></strong>.
                    <br>Esto podría afectar a los libros asociados.
                </p>

                <div class="d-flex justify-content-center gap-3">
                    <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <form id="deleteAuthorForm" asp-action="Delete" method="post">
                        <input type="hidden" name="id" id="deleteAuthorId" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold shadow-sm">
                            Sí, proceder
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const deleteModalEl = document.getElementById('deleteAuthorModal');
            const deleteModal = new bootstrap.Modal(deleteModalEl);
            const modalTitle = document.getElementById('modalAuthorName');
            const modalInput = document.getElementById('deleteAuthorId');

            // Event Delegation (Mejor rendimiento y seguridad)
            document.querySelectorAll('.js-delete-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const name = this.getAttribute('data-name');

                    modalInput.value = id;
                    modalTitle.textContent = name;
                    deleteModal.show();
                });
            });
        });
    </script>
}