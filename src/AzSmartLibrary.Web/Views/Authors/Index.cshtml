@model IEnumerable<AzSmartLibrary.Application.DTOs.AuthorDto>

@{
    ViewData["Title"] = "Autores";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestión de Autores</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Autor
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-end">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                  onsubmit="return confirm('¿Estás seguro de desactivar este autor?');"
                                  style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center mt-3">
                No hay autores registrados. ¡Agrega el primero!
            </div>
        }
    </div>
</div>