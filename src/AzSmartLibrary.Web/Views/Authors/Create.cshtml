@model AzSmartLibrary.Web.Models.CreateAuthorViewModel

@{
    ViewData["Title"] = "Nuevo Autor";
}

<div class="row justify-content-center align-items-center min-vh-75 fade-in-up">
    <div class="col-md-8 col-lg-6 col-xl-5">

        <div class="glass-card">

            <div class="card-header-modern d-flex align-items-center justify-content-between">
                <div>
                    <h5 class="mb-1 text-white-50 text-uppercase small ls-1">Talento Literario</h5>
                    <h3 class="mb-0 fw-bold"><i class="bi bi-person-fill-add me-2 opacity-75"></i>Registrar Autor</h3>
                </div>
                <i class="bi bi-feather fs-1 opacity-25"></i>
            </div>

            <div class="card-body p-4 p-md-5">
                <form asp-action="Create" class="needs-validation" novalidate>

                    @* Resumen de validaciones de negocio (ej. Nombre duplicado) *@
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4 shadow-sm border-0 small"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Name" class="form-control" placeholder="Nombre completo" id="floatingName" />
                        <label for="floatingName" class="text-muted">
                            <i class="bi bi-person-vcard me-1"></i> Nombre Completo
                        </label>
                        <span asp-validation-for="Name" class="text-danger small mt-1 d-block fw-medium"></span>
                        <div class="form-text small text-muted mt-2">
                            <i class="bi bi-info-circle me-1"></i> El nombre debe ser único en la biblioteca.
                        </div>
                    </div>

                    <div class="d-grid gap-3 d-md-flex justify-content-md-between align-items-center mt-5">
                        <a asp-action="Index" class="btn btn-light btn-modern text-muted">
                            <i class="bi bi-arrow-left"></i> Volver
                        </a>
                        <button type="submit" class="btn btn-save btn-modern px-5 shadow-lg">
                            <i class="bi bi-check2-circle me-2"></i> Guardar Autor
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        // Validaciones de Servidor + Cliente
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Validación visual instantánea (Bootstrap 5)
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}